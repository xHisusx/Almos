<style media="screen">
  .catalog-container, .search-bar {
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;

    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;

    -webkit-justify-content:center;
    -ms-flex-pack: center;
    justify-content: center;
  }

  .catalog-container {
    min-width: 100vw;
    min-height: 100vh;
    background-repeat: no-repeat;
  }

  .container-inner {
    width: 960px;
    height: 100vh;


    background-color: #ffffff;

    box-shadow: 1px 0px 4px 0px #ccc;


  }


  .search-bar {
    margin-top: 15px;
    width: 930px;
    height: 59px;
    background-color:#F5F5F5;
    color: #4a4a4a;


  }

  .search-input:focus::-webkit-input-placeholder{
    color: transparent;
    opacity: 0;
      transition: opacity 0.3s ease;
  }
  .search-input::-webkit-input-placeholder{
      opacity: 1;
      transition: opacity 0.3s ease;
      color: #ccc;
  }

  .search-input {
    width:100%;
    border:none;
    font-size: 18pt;
    float: left;

    background: #F5F5F5;
    color:#000;
  }

  .search-input:hover, .search-input:focus, .search-input:active{
    outline:none;
  }

  .search-icon{
  color: #ccc;
}

.search-table {
  width:930px;
  min-height:1000px;
}



</style>

<div class="catalog-container">
  <div class="container-inner">
    <div class="ui grid container">
      <div class="sixteen wide column">
        <div class="search-bar">
          <div class="ui grid container">
            <div class="one wide column">
                    <span class="search-icon"><i class="fas fa-search fa-2x"></i></span>
            </div>
            <div class="fifteen wide column">
              {{input type="text" class="search-input" value=name id="search" name="search" placeholder="Поиск..."}}
              <button type="button" name="button" {{action 'findName'}}></button>
            </div>
          </div>
        </div>
      </div>
      <div class="sixteen wide column">
        <table class="search-table">
          <col width="35%"/>
          <col width="15%"/>
          <col width="15%"/>
          <col width="35%"/>
          <thead>
            <tr>
            <th><div {{!class="sortable down"}}>Наименование</div></th>
            <th><div {{!class="sortable up"}}>Количество</div></th>
            <th>Цена</th>
            <th>Примечание</th>
          </tr>
        </thead>
        <tbody>
          {{price-item}}
        </tbody>
        </table>
      </div>
    </div>


  </div>

</div>

{{yield}}
