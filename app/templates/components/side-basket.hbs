<style media="screen">

  /* TODO js basket button & handlebars */
.basket-toggle-button {
  position: absolute;
  z-index:3;
  bottom:0;

  width:80px;
  height:59px;

  border: none;
  background: none;
  outline: 0;

  -webkit-user-select:none;
  -moz-user-select:none;
  -ms-user-select:none;
  user-select:none;

  cursor: pointer;
  /* pointer-events: none; */
}

.side-bar-outer{
height:100vh;
width:0;
position:fixed;
z-index:3;
top:0;
left:0;
background-color:#fff;
overflow-x:hidden;
transition:0.5s;

font-size:36px;
overflow: hidden;
}

.basket-close-warp {
  position: absolute;
  left:280px;
  top:0;
  width:20px;
  height:100%;
}

.side-bar-inner {
  position:relative;
  display: block;
  margin-top:0;
  margin-left: 20px;
  height: 85vh;
  width: 260px;


  background-color: #fff;

}

.basket-title {
height: 2.5vh;
text-decoration:none;
font-size:22px;
color:#ccc;
display:block;

margin: 2.5vh;
text-align: center;
}


.button-close {
    position: absolute;
    right:0;
    padding:0;
    height: 100%;
    width:20px;

    padding: 0;
    border: none;
    background: none;
    outline: 0;

    -webkit-user-select:none;
    -moz-user-select:none;
    -ms-user-select:none;
    user-select:none;

    cursor: pointer;

}

.button-close :active {
  color: inherit;
  text-decoration: none;
}

a.button-close {
  color: inherit;
  text-decoration: none;
  color:#000;
}

.icon-close-warp {
  position: absolute;
  top: calc(50% - 30px);
  right:0;
  z-index: 4;
}

.button-buy-desr, .basket-buy-button .button-buy-icon {
  display: block;
  height: 100%;
  text-align: center;
  position: absolute;
  top: 0;
}

.basket-buy-button {
  position: absolute;
  display: block;
  width:300px;
  height:59px;
  line-height: 59px;
  bottom: 0;
  left: 0;
  right: 0;

  background-color:#4CAF50;
  border-radius: none;
  border: none;
  outline: 0;
  overflow: hidden;
  color:white;
}

.basket-buy-button:hover {
    background-color: #43A047; /* Green */
}

.button-buy-desr {
  width: 72%;
  line-height: inherit;
  font-size: 20px;
  text-transform: uppercase;
  left: 0;
}

.button-buy-desr:after {
content: '';
background-color: #388E3C;
width: 2px;
height: 70%;
position: absolute;
top: 15%;
right: -1px;
}

.button-buy-icon {
  width: 28%;
  right: 0;

  height: 28px;
  color: white;
}
</style>




  <button type="button" class="basket-toggle-button" name="button" onclick="openSlideMenu()"></button>

  <div id="side-menu" class="side-bar-outer">
      <div class="basket-title">
        Корзина
      </div>
      <div class="basket-close-warp">
        <button type="button" class="button-close" onclick="closeSlideMenu()">
          <div class="icon-close-warp">
            <div style="color:black;">
              <i class="fas fa-angle-left"></i>
            </div>
          </div>
        </button>
      </div>
      <div class="side-bar-inner">
      </div>
      <button type="button" name="button" class="basket-buy-button" {{action 'fuck'}}>
        <span class="button-buy-desr">Продолжить
          ::after
        </span>
        <div class="button-buy-icon">
          <i class="fas fa-angle-double-right"></i>
        </div>
      </button>
      </div>


  <script>
    function openSlideMenu(){
      document.getElementById('side-menu').style.width = '300px';
    }

    function closeSlideMenu(){
      document.getElementById('side-menu').style.width = '0';
    }
  </script>
