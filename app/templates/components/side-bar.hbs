<link href="https://fonts.googleapis.com/css?family=Fira+Sans+Extra+Condensed" rel="stylesheet">

<style>

  .items-list {
    margin-top: 30px;
  }

  .item {
    position: relative;
    height: 8%;

    font-size: 18px;
    font-family: 'Fira Sans Extra Condensed', sans-serif;

    text-align: center;
  }

    hr {
    border: 0;
    height: 12px;
    /*background-image: linear-gradient(to right, rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75));*/
    box-shadow: inset 0 12px 12px -12px rgba(0, 0, 0, 0.5);
    /* border-color: #ccc;
    background-color: #ccc; */
    color: white;
  }


  .basket {
    position: relative;
    width: 100%;
    height: 44%;
    padding-bottom: 50px;
  }

  .empty-basket {
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%, -50%);
  }

  .buy-button {
    /* position: absolute;
    bottom: 0; */
    text-align: center;
  }


  h4 {
      text-align:center;
  }

  .fa-shopping-basket {
     text-shadow: -7px 8px 2px #c54040, -3px 5px #c74b16;
  }
</style>

<div class="ui sidebar visible inverted vertical menu">
  <div style="margin-top:30px;margin-left:auto;margin-right:auto;width:calc(50% - 10px);color:white;">
    <i class="fab fa-adn fa-7x"></i>
    </div>
    <div class="items-list">
      {{#link-to 'search' tagName="a"}}
      <a class="item" href="search">Поиск</a>
      {{/link-to}}

      {{#link-to 'catalog' tagName="a"}}
      <a class="item" href="catalog">Каталог</a>
      {{/link-to}}

      {{#link-to 'download' tagName="a"}}
      <a class="item" href="download">Контакт</a>
      {{/link-to}}

    </div>
      <h4 class="ui inverted horizontal divider header">Ваша корзина</h4>
    <div class="basket">
      <div class="empty-basket">
        <div style="display:table-cell;vertical-align:middle;color:#2f2f2f;">
          <i class="fas fa-shopping-basket fa-5x aria-hidden=true"></i>
        </div>
      </div>
    </div>
    <div class="buy-button">
      <div class="positive ui animated button" tabindex="0">
        <div class="visible content">Оформить</div>
        <div class="hidden content">
          <i class="right arrow icon"></i>
        </div>
    </div>
  </div>
</div>
