.content {
  width:960px;
  min-height:100vh;
  height:auto;

  padding: 20px;
}

.results-content {
  margin-top: 60px;
}

.nav-bar {
  z-index:15;
  position:fixed;

  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;

  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;

  -webkit-justify-content:center;
  -ms-flex-pack: center;
  justify-content: center;

  z-index:15;
  margin-top: -20px;
  margin-left: -20px;


  width: 960px;
  height: 64px;

  background-color: #F5F5F5;
}
.nav-bar-inner {
  width: 960px;
  height: 64px;
  padding:20px;
}

.search-input:focus::-webkit-input-placeholder{
  color: transparent;
  opacity: 0;
    transition: opacity 0.3s ease;
}
.search-input::-webkit-input-placeholder{
    opacity: 1;
    transition: opacity 0.3s ease;
    color: #ccc;
}

.search-input {
  width:100%;
  border:none;
  font-size: 18pt;
  float: left;

  background: #F5F5F5;
  color:#000;

  margin-left: 20px;
}

.search-input:hover, .search-input:focus, .search-input:active{
  outline:none;
}

.search-icon{
color: #c3c3c3;
}

.find-btn {
width:64px;
height:100%;
z-index:14;
padding: 0;
outline:0;
border: none;
background: none;
background-color: #eee;
cursor: pointer;
}

.find-btn:hover {
  background-color: #e1e1e1;
}
.find-btn:hover .search-icon {
  color:#afafaf;
}

.erase-btn {
  width:auto;
  height:auto;
  z-index:14;
  padding: 0;
  outline:0;
  border: none;
  background-color: #f5f5f5;
  cursor: pointer;
  margin-right:20px;
}

.erase-icon {
  font-size: 22px;
  color: #c3c3c3;
}

</style>

  <div class="content">
        <div class="nav-bar">
          <div class="nav-bar-inner">
            {{input type="text" class="search-input" insert-newline=(action 'handleFilterEntry') value=value name="search" placeholder="Поиск..."}}
          </div>
          {{#if value}}
          <button type="button" name="button" class="erase-btn" >
            <span class="erase-icon" {{action 'eraseInput'}}><i class="fas fa-times"></i></span>
          </button>
          {{/if}}
          <button type="button" name="button" class="find-btn" {{action 'handleFilterEntry'}}>
            <span class="search-icon"><i class="fas fa-search fa-2x"></i></span>
          </button>
        </div>
      <div class="results-content">
              {{yield results}}
      </div>
  </div>
